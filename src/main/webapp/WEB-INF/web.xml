    <!-- Context Parameters -->
    <context-param>
        <param-name>prelude</param-name>
        <param-value>This is the prelude text.</param-value>
    </context-param>
    <context-param>
        <param-name>coda</param-name>
        <param-value>This is the coda text.</param-value>
    </context-param>

    <!-- Listener -->
    <listener>
        <listener-class>com.example.lab2.AppListener</listener-class>
    </listener>

    <!-- Filters -->
    <filter>
        <filter-name>LoggingFilter</filter-name>
        <filter-class>com.example.lab2.LoggingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LoggingFilter</filter-name>
        <url-pattern>/input.jsp</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>FileUploadServlet</servlet-name>
        <servlet-class>com.example.lab2.FileUploadServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FileUploadServlet</servlet-name>
        <url-pattern>/FileUploadServlet</url-pattern>
    </servlet-mapping>


    <filter>
        <filter-name>DecoratingFilter</filter-name>
        <filter-class>com.example.lab2.DecoratingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>DecoratingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
